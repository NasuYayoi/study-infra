<!DOCTYPE html>
<html>
  <head>
    <title>StudyInfra</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>


    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">

    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
  </head>

  <body>
    <nav>
      <div class="nav-wrapper light-blue">
        <a href="#!" class="brand-logo"><%= @title %></a>
        <ul class="right hide-on-med-and-down">
          <% unless @path == new_user_memo_path(params[:user_id]) %>
            <li><%= link_to '新規作成', new_user_memo_path(params[:user_id]), class: "waves-effect waves-light btn-large red accent-4" %></li>
          <% end %>
            <li><%= link_to '戻る', contents_path, class: "waves-effect waves-light btn-large red accent-4" %></li>
        </ul>
      </div>
    </nav>

    <div class="row">
      <%= render "/layouts/side_bar" %>
      <div class="main col s9">
        <%= yield %>
      </div>
    </div>

  </body>
</html>
