<div class="container">
  <div class="row">
    <div class="col s6">
      <h2>ログイン</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="input-field">
          <%= f.label :email, class: "active" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "validate" %>
        </div>

        <div class="input-field">
            <%= f.label :password, class: "active" %>
            <%= f.password_field :password, autocomplete: "current-password", class: "validate" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>

        <div class="actions waves-effect waves-light btn light-blue">
          <%= f.submit "ログイン" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
