<div class="container">
  <div class="row">
    <div class="col s6">
      <h2>新規登録</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="input-field">
          <%= f.label :name, class: "active" %>
          <%= f.text_field :name, id: "user_name", class: "validate" %>
        </div>

        <div class="input-field">
          <%= f.label :email, class: "active" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "validate" %>
        </div>

        <div class="input-field">
          <%= f.label :password, class: "active" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
           <%= f.password_field :password, autocomplete: "new-password", class: "validate" %>
        </div>

        <div class="actions waves-effect waves-light btn light-blue">
          <%= f.submit "新規登録" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
